<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Fot_daily" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Define the primary colors, text colors, etc., here -->

        <!-- Button background and text color customization -->
        <item name="colorPrimary">@color/cyan</item>  <!-- Set the primary color for the app -->
        <item name="colorPrimaryVariant">@color/cyan</item>  <!-- Set the primary variant -->
        <item name="colorOnPrimary">@android:color/white</item>  <!-- Set color for text on primary color -->

        <!-- Customize the button style -->
        <item name="buttonStyle">@style/CustomButtonStyle</item> <!-- Apply custom button style -->
    </style>

    <!-- Custom button style -->
    <style name="CustomButtonStyle">
        <item name="android:background">@color/darkCyan</item>  <!-- Set button background to dark cyan for better contrast -->
        <item name="android:textColor">@android:color/white</item>  <!-- Set button text color to white -->

    </style>

    <style name="Theme.Fot_daily" parent="Base.Theme.Fot_daily" />
</resources>
